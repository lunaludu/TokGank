<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLlis"
    android:paddingBottom="16dp" >



    <LinearLayout
        android:id="@+id/content_s"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        >

        <View
            style="@style/horizontalLine2"
            android:layout_marginLeft="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/head"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_icon"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="HUGH"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_icon"
                android:layout_below="@+id/name1"
                android:text="mutabun@gamil.com"
                android:textSize="12sp"
                />

            <ImageView
                android:id="@+id/qrcode_image"
                android:layout_marginRight="20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/head"
                />
        </RelativeLayout>


        <View
            style="@style/horizontalLine2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/colorLlis"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/iddd"
                    style="@style/menuItem"
                    android:clickable="true"
                    android:text="收藏"
                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="1.0"
                    android:visibility="gone"
                    android:textColor="@color/tab_checked"
                    android:textSize="18sp"
                    />
            </RelativeLayout>

            <View
                style="@style/horizontalLine"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/tttsst"
                style="@style/menuItem"
                android:clickable="true"
                android:text="@string/fragment_me_pay"
                />

            <View
                style="@style/horizontalLine"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/tttt"
                style="@style/menuItem"
                android:clickable="true"
                android:text="相册"
                 />
            <View
                style="@style/horizontalLine"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/tttt2"
                style="@style/menuItem"
                android:clickable="true"
                android:text="卡包"
                />

            <View
                style="@style/horizontalLine"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/tttt4"
                style="@style/menuItem"
                android:clickable="true"
                android:text="表情"
                />

            <View
                style="@style/horizontalLine2"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/tttt3"
                style="@style/menuItem"
                android:clickable="true"
                android:text="设置"
                />

        </LinearLayout>

        <View
            style="@style/horizontalLine2"
            android:layout_marginLeft="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="10dp"
            android:background="@color/colorLlis"
            android:text="SEE U AGAIN."
            android:textColor="@color/colorHhui"
            android:textSize="15sp"
            />
    </LinearLayout>

</RelativeLayout>